{
  "openapi": "3.1.0",
  "info": {
    "title": "聊天日志API",
    "description": "记录和管理聊天信息的API服务",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "http://10.238.165.208:8090/api/v1",
      "description": "开发服务器"
    }
  ],
  "paths": {
    "/logs": {
      "post": {
        "description": "创建一条新的聊天日志记录",
        "operationId": "createLog",
        "requestBody": {
          "description": "日志信息",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLogRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功创建日志",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "deprecated": false
      }
    }
  },
  "components": {
    "schemas": {
      "CreateLogRequest": {
        "type": "object",
        "description": "创建日志的请求参数",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "description": "聊天文本内容",
            "example": "这是一条聊天记录"
          },
          "validation_result": {
            "type": "boolean",
            "description": "验证结果",
            "example": true
          }
        }
      }
    }
  }
}